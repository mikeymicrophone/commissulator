<p id="notice"><%= notice %></p>

<h1>Employers</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Name', filter_params.merge(:sort => 'name') %></th>
      <th>Industries</th>
      <th>Employments</th>
      <th colspan="3"></th>
      <th>Address</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= link_to_name_with_icon employer %></td>
        <td><%= employer.industries.map(&:name).to_sentence %><%= link_to_associated employer, :industries %></td>
        <td><%= link_to_associated employer, :employments %></td>
        <td><%= link_to_associated employer, :emails %></td>
        <td><%= link_to_associated employer, :phones %></td>
        <td><%= link_to_associated employer, :social_accounts %></td>
        <td><%= employer.address %></td>
        <td><%= employer.url %></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= edit_employer_link employer %></td>
        <td><%= delete_employer_link employer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @employers %>
<br>

<%= link_to 'New Employer', new_employer_path %>
